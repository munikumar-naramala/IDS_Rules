alert any $EXTERNAL_NET any -> $HOME_NET any (msg:"[FTPD] FTP Login refused"; content: "FTP LOGIN REFUSED"; default_proto: tcp; default_dst_port: $FTP_PORT; classtype: unsuccessful-user; program: ftpd|ftp|FTP|FTPD; sid:5000182; rev:6;)
alert any $EXTERNAL_NET any -> $HOME_NET any (msg:"[FTPD] File created"; content: " created "; default_proto: tcp; default_dst_port: $FTP_PORT; classtype: not-suspicious; program: ftpd|ftp|FTP|FTPD; sid:5000183; rev:7;)
alert any $EXTERNAL_NET any -> $HOME_NET any (msg:"[FTPD] File deleted"; content: " deleted "; default_proto: tcp; default_dst_port: $FTP_PORT; classtype: not-suspicious; program: ftpd|ftp|FTP|FTPD; sid:5000184; rev:6;)
alert any $EXTERNAL_NET any -> $HOME_NET any (msg:"[FTPD] User uploaded a file to server"; content: "IMPORT file"; default_proto: tcp; default_dst_port: $FTP_PORT; classtype: not-suspicious; program: ftpd|ftp|FTP|FTPD; sid:5000185; rev:6;)
alert any $EXTERNAL_NET any -> $HOME_NET any (msg:"[FTPD] User downloaded a file to server"; content: "EXPORT file"; default_proto: tcp; default_dst_port: $FTP_PORT; classtype: not-suspicious; program: ftpd|ftp|FTP|FTPD; sid:5000186; rev:6;)
alert any $EXTERNAL_NET any -> $HOME_NET any (msg:"[FTPD] Remote host connected to FTP server"; pcre: "/FTP LOGIN FROM|connection from|connect from/"; default_proto: tcp; default_dst_port: $FTP_PORT; classtype: successful-user; program: ftpd|ftp|FTP|FTPD; sid:5000187; rev:6;)
alert any $EXTERNAL_NET any -> $HOME_NET any (msg:"[FTPD] Connection blocked by TCP Wrappers"; content: "refused connect from"; default_proto: tcp; default_dst_port: $FTP_PORT; classtype: tcp-connection; program: ftpd|ftp|FTP|FTPD; sid:5000188; rev:6;)
alert any $EXTERNAL_NET any -> $HOME_NET any (msg:"[FTPD] Reverse lookup failure"; pcre: "/can't verify hostname|gethostbyaddr/"; default_proto: tcp; default_dst_port: $FTP_PORT; classtype: not-suspicious; program: ftpd|ftp|FTP|FTPD; sid:5000189; rev:6;)
alert any $EXTERNAL_NET any -> $HOME_NET any (msg:"[FTPD] Multiple failed login attempts"; content: "repeated login failures"; xbits: set,brute_force, track ip_src, expire 21600; default_proto: tcp; default_dst_port: $FTP_PORT; classtype: misc-attack; program: ftpd|ftp|FTP|FTPD; sid:5000190; rev:8;)
alert any $EXTERNAL_NET any -> $HOME_NET any (msg:"[FTPD] User disconnected due to time out"; content: "timed out after"; default_proto: tcp; default_dst_port: $FTP_PORT; classtype: not-suspicious; program: ftpd|ftp|FTP|FTPD; sid:5000191; rev:6;)
alert any $EXTERNAL_NET any -> $HOME_NET any (msg:"[FTPD] Attempted access to a disabled account"; content: "Account is disabled"; default_proto: tcp; default_dst_port: $FTP_PORT; classtype: unsuccessful-user; program: ftpd|ftp|FTP|FTPD; sid:5000192; rev:6;)
#alert any $EXTERNAL_NET any -> $HOME_NET any (msg:"[FTPD] Failed authentication"; content: "failed authentication from"; nocase; default_proto: tcp; default_dst_port: $FTP_PORT; classtype: unsuccessful-user; program: ftpd|ftp|FTP|FTPD; sid:5001522; rev:6;)
drop any $EXTERNAL_NET any -> $HOME_NET any (msg:"[FTPD] Failed authentication - Brute force [5/5]"; content: "failed authentication from"; nocase; xbits: set,brute_force,track ip_src, expire 21600; default_proto: tcp; default_dst_port: $FTP_PORT; classtype: brute-force; program: ftpd|ftp|FTP|FTPD; after: track by_src, count 5, seconds 300; threshold: type suppress, track by_src, count 1, seconds 300; sid:5000193; rev:13;)
alert any $EXTERNAL_NET any -> $HOME_NET any (msg: "[FTPD] User logged into an disabled account"; content: "FTP LOGIN FROM"; meta_content: " %sagan% ",apache,mysql,www,nobody,nogroup,portmap,named,rpc,mail,ftp,shutdown,halt,daemon,bin,postfix,shell,info,guest,psql,user,users,console,uucp,lp,sync,sshd,cdrom,ossec,sagan; default_proto: tcp; default_dst_port: $FTP_PORT; classtype: successful-user; xbits: set,brute_force, track ip_src, expire 21600; program: ftpd|ftp|FTP|FTPD; sid: 5000412; rev:10;)

# Rule by W. E Restrepo (werestrepo@quadrantsec.com) - 08/30/2016

alert any $EXTERNAL_NET any -> $HOME_NET any (msg: "[FTPD] FTPCHK3 file accessed by user"; content: "ftpchk3"; meta_content: "%sagan%",CHMOD,DELE,STOR"; parse_src_ip: 2; parse_dst_ip: 1; parse_port; program: ftp|ftpd|FTP|FTPD; default_proto: tcp; default_dst_port: $FTP_PORT; classtype: suspicious-traffic; reference: url,blog.ftptoday.com/ftp-password-stealing-malware; sid:5002950; rev: 5;) 


